<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h1>会員情報詳細</h1>
      <div class="profile_image">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize: "400x300") %>
      <% else %>
        <%= image_tag("default_user.png", size: "400x300") %>
      <% end %>
      </div>
      <ul class="profile-items">
        <li>
          <p>名前</p>
          <p><%= @user.family_name+@user.last_name %></p>
        </li>
        <li>
          <p>メールアドレス</p>
          <p><%= @user.email %></p>
        </li>
        <li>
          <p>学校種</p>
          <p><%= @user.school_type %></p>
        </li>
        <li>
          <p>所属所在地</p>
          <p><%= @user.prefecture %></p>
        </li>
        <li>
          <p>所属</p>
          <p><%= @user.school_name %></p>
        </li>
        <li>
          <p>教科</p>
          <p><%= @user.subject %></p>
        </li>
        <li>
          <p>教員歴</p>
          <p><%= @user.year %>年</p>
        </li>
        <li>
          <p>自己紹介</p>
          <p><%= @user.introduction %></p>
        </li>
      </ul>
        <% if @user.user_deleted?(@user) %>
          <%= link_to "会員にする", admins_user_path(@user), method: :patch, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "退会にする", admins_user_path(@user), method: :patch, data: {confirm:"本当に削除してもよろしいですか？"},class: "btn btn-danger" %>
        <% end %>
      </span>
    </div>
  </div>
</div>