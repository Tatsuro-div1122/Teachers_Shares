<div class="container">
  <div class="row">

    <h2>プロフィールの変更</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :"プロフィール写真" %><br />
        <%#= image_tag avatar.preview(resize: "50x30") %>
        <%= f.file_field :avatar, placeholder: "画像アップロード" %>
      </div>

      <div class="field">
        <%= f.label :family_name, "氏" %><br />
        <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
      </div>

      <div class="field">
        <%= f.label :last_name, "名" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :school_type, "学校種" %><br />
        <%= f.radio_button :school_type, :小学校 %>
        <%= f.label :小学校 %>
        <%= f.radio_button :school_type, :中学校  %>
        <%= f.label :中学校 %>
        <%= f.radio_button :school_type, :高等学校  %>
        <%= f.label :高等学校 %>
      </div>

      <div class="field">
        <%= f.label :prefecture, "所属都道府県" %><br />
        <%= f.select :prefecture, User.prefectures.keys, {}, class: 'form-control btn btn-info' %>
      </div>

      <div class="field">
        <%= f.label :school_name, "所属" %><br />
        <%= f.text_field :school_name, autofocus: true, autocomplete: "school_name" %>
      </div>

      <div class="field">
        <%= f.label :subject, "教科" %><br />
        <%= f.select :subject, User.subjects.keys, {}, class: 'form-control btn btn-info' %>
      </div>

      <div class="field">
        <%= f.label :year, "教員歴" %><br />
        <%= f.select :year, options_for_select((1..40).to_a) %>年
      </div>

      <div class="field">
        <%= f.label :introduction, "自己紹介" %><br />
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, "パスワード(6文字以上)" %> <i>(変更したくない場合は空欄にしてください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <span><%= f.submit "変更内容を保存する", class: "btn btn-success" %></span>
        <span><%= link_to "退会する", delete_account_path, class: "btn btn-danger btn-xs" %></span>
      </div>
    <% end %>
  </div>
</div>


