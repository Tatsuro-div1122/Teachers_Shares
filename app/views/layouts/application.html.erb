<!DOCTYPE html>
<html>
  <head>
    <title>TeachersShares</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/22bae51414.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <h1 class="headline"><%= link_to "TEACHERS' SHARES", root_path %></h1>
      <% unless user_signed_in? %>
      <%= link_to "ログイン", session_path%>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
      <%= link_to "つながる", users_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :post %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>
    <%= yield %>
    <footer></footer>
  </body>
</html>
