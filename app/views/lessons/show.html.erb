<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <section>
        <span>
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar.variant(resize: "60x60") %>
          <% else %>
            <%= image_tag("default_user.png", size: "60x60") %>
          <% end %>
        </span>
        <p><strong><%= @user.last_name + @user.family_name %></strong></p>
        <p><%= @user.school_name %></p>
        <p><%= @lesson.school_type %></p>
        <p><%= @lesson.subject %></p>
        <p><%= date_format(@lesson.created_at) %></p>
        <span><%= render 'shared/follow', user: @user %></span>
      </section>
      <section>
        <h1><%= @lesson.title %></h1>
        <% if @lesson.file.attached? %>
        <span><%= link_to '資料をダウンロード', @lesson.file, download: " ", class: "btn btn-secondary" %></span>
        <% end %>
        <p><%= @lesson.description %></p>
      </section>
      <span><%= link_to "編集する", edit_lesson_path(@lesson), class: "btn btn-primary" %></span>
      <span><%= link_to "削除する", lesson_path(@lesson), method: :delete, data: {confirm:"本当に削除してもよろしいですか？"}, class: "btn btn-danger" %></span>
    </div>
  </div>
</div>