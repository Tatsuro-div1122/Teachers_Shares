<% unless current_user.own_lesson?(lesson)%>
  <% if lesson.lesson_bookmarked_by?(current_user) %>
    <%= link_to lesson_lesson_bookmarks_path(lesson), method: :delete, class: "btn btn-default" do %>
      <i class="fas fa-bookmark" aira hidden="true" style="color: #1e90ff"></i> ブックマークをはずす
    <% end %>
  <% else %>
    <%= link_to lesson_lesson_bookmarks_path(lesson), method: :post, class: "btn btn-default" do %>
      <i class="far fa-bookmark" aira hidden="true" style="color: #1e90ff"></i> ブックマークする
    <% end %>
  <% end %>
<% end %>