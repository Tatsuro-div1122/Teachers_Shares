<% if lesson_comment.user != current_user %>
  <% if lesson_comment.lesson_comment_liked_by?(current_user) %>
    <%= link_to lesson_comment_likes_path(lesson_comment), method: :delete, class: "btn btn-default" do %>
    <i class="fas fa-lightbulb" aria-hidden="true" style="color: yellow"></i> 参考になった！
    <%= lesson_comment.lesson_comment_likes.count %>
    <% end %>
  <% else %>
    <%= link_to lesson_comment_likes_path(lesson_comment), method: :post, class: "btn btn-default" do%>
    <i class="far fa-lightbulb" aria-hidden="true"></i> 参考になった！
    <%= lesson_comment.lesson_comment_likes.count %>
    <% end %>
  <% end %>
<% end %>