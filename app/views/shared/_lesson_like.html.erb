<% if lesson.lesson_liked_by?(current_user) %>
  <%= link_to lesson_lesson_like_path(lesson), method: :delete do %>
  <i class="fas fa-lightbulb" aria-hidden="true" style="color: yellow"></i>
  参考になった！
  <%= lesson.lesson_likes.count %>
  <% end %>
<% else %>
  <%= link_to lesson_lesson_like_path(lesson), method: :post do%>
  <i class="far fa-lightbulb" aria-hidden="true"></i>
  参考になった！
  <%= lesson.lesson_likes.count %>
  <% end %>
<% end %>
