<% unless current_user.own_lesson?(lesson)%>
  <% if lesson.lesson_liked_by?(current_user) %>
    <%= link_to lesson_lesson_likes_path(lesson), method: :delete, class: "btn btn-default" do %>
    <i class="fas fa-lightbulb" aria-hidden="true" style="color: yellow"></i> 参考になった！
    <%= lesson.lesson_likes.count %>
    <% end %>
  <% else %>
    <%= link_to lesson_lesson_likes_path(lesson), method: :post, class: "btn btn-default" do%>
    <i class="far fa-lightbulb" aria-hidden="true"></i> 参考になった！
    <%= lesson.lesson_likes.count %>
    <% end %>
  <% end %>
<% end %>
