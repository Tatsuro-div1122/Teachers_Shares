<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <%= render 'users/shared/counsel_category' %>
    </div>
    <div class="col-lg-8">
      <h1><%= @title %>一覧</h1>
      <span>1~10件表示 (全<%= @counsels.count %>件)</span>
      <table class="table">
        <tbody>
          <% @counsels.each do |counsel| %>
          <tr>
              <td>
                <%= link_to counsel_path(counsel) do %>
                  <% if counsel.user_deleted?(counsel.user) %>
                    <p>退会済みの先生<p>
                  <% else %>
                    <% if counsel.user.avatar.attached? %>
                      <%= image_tag counsel.user.avatar.variant(resize: "50x50") %>
                    <% else %>
                      <%= image_tag("default_user.png", size: "50x50") %>
                    <% end %>
                    <ul>
                      <li><%= counsel.user.last_name + counsel.user.first_name %></li>
                      <li><%= counsel.category %></li>
                      <li><%= counsel.created_at.to_s(:datetime) %></li>
                    </ul>
                  <% end %>
                  <p><strong><%= counsel.title %></strong></p>
                  <p><%= counsel.description %></p>
                  <span><%#= render 'users/shared/counsel_like', counsel: counsel %></span>
                  <% if current_user.own_counsel?(counsel) %>
                    <span><%= link_to "編集する", edit_counsel_path(counsel), class: "btn btn-primary" %></span>
                    <span><%= link_to "削除する", counsel_path(counsel), method: :delete, data: {confirm:"本当に削除してもよろしいですか？"}, class: "btn btn-danger" %></span>
                  <% end %>
                <% end %>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>