          <div class="row">
            <% @counsels.each do |counsel| %>
              <div class="col-md-4 recommended-counsel-box">
                <div class="panel panel-info">
                  <div class="panel-heading counsel-title">
                    <%= link_to counsel_path(counsel) do %>
                      <%= counsel.title %>
                    <% end %>
                  </div>
                  <div class="panel-body">
                    <p class="counsel-description"><%= counsel.description %></p>
                    <p class="counsel-tag"><span class="label label-default"><%= counsel.category %></span></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="text-right"><%= link_to "▶もっと見る", counsels_path %></div>

        </section>
      </div>

      <!-- ユーザーサイドバー -->
      <div class="col-md-3">
      <section>
        <div class="own-info-sidebar">
          <%= render 'users/shared/own_info', user: current_user %>
        </div>
        <div class="maybe-friends-sidebar">
          <%= render 'users/shared/maybe_friends', users: @users %>
        </div>
      </section>
      </div>

      </div>
    </div>
  </div>

