          <div class="row">
            <% @lessons.each do |lesson| %>
              <div class="col-md-4 recommended-lesson-box">
                <div class="panel panel-warning">
                  <div class="panel-heading lesson-title">
                    <%= link_to lesson_path(lesson) do %>
                      <%= lesson.title %>
                    <% end %>
                  </div>
                  <div class="panel-body">
                    <p class="lesson-description"><%= lesson.description %></p>
                    <ul class="lesson-tags list-unstyled">
                      <li class="lesson-tag"><span class="label label-default"><%= lesson.school_type %></span></li>
                      <li class="lesson-tag"><span class="label label-default"><%= lesson.grade %></span></li>
                      <li class="lesson-tag"><span class="label label-default"><%= lesson.subject %></span></li>
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="text-right"><%= link_to "▶もっと見る", lessons_path %></div>

        </section>

        <!-- 新着悩み相談 -->
        <section>
            <h3>新着悩み相談</h3>

