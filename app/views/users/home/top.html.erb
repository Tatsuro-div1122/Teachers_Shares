        <section>
          <table class="table table-hover">
            <thead>
              <tr class="warning">
                <th>
                  <%= link_to lessons_path do %>
                    <i class="fas fa-book-open"></i> 授業アイデア
                  <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @lesson_subjects.each do |subject| %>
