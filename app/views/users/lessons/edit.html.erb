<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1>授業アイデア編集</h1>
      <%= form_with(model: @lesson, url: lesson_path(@lesson), method: :patch, local: true) do |f| %>

      <div class="field">
        <%= f.label :school_type, "学校種" %><br />
        <%= f.radio_button :school_type, :小学校 %>
        <%= f.label :小学校 %>
        <%= f.radio_button :school_type, :中学校  %>
        <%= f.label :中学校 %>
        <%= f.radio_button :school_type, :高校  %>
        <%= f.label :高校 %>
      </div>

      <div class="field">
        <%= f.label :grade, "学年" %><br />
        <%= f.select :grade, Lesson.grades.keys, class: 'form-control btn btn-info' %>
      </div>

      <div class="field">
        <%= f.label :subject, "教科" %><br />
        <%= f.select :subject, Lesson.subjects.keys, class: 'form-control btn btn-info' %>
      </div>

      <div class="field">
        <%= f.label :file, "資料アップロード" %><br />
        <%= f.file_field :file, placeholder: "ファイルを選択" %>
      </div>

      <div class="field">
        <%= f.label :title, "タイトル" %><br />
        <%= f.text_field :title, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :description, "授業について" %><br />
        <%= f.text_area :description, autofocus: true%>
      </div>

      <div class="actions">
        <%= f.submit "変更を提出する", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
