<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h2>新規授業アイデア</h2>

      <!-- フォーム -->
      <%= form_with model: @lesson, url: lessons_path, method: :post, local: true do |f| %>

      <div class="form-group">
        <%= f.label :school_type, "学校種" %><br />
        <%= f.radio_button :school_type, :小学校, checked:"checked" %>
        <%= f.label :小学校 %>
        <%= f.radio_button :school_type, :中学校  %>
        <%= f.label :中学校 %>
        <%= f.radio_button :school_type, :高校  %>
        <%= f.label :高校 %>
      </div>

      <div class="input-group">
        <%= f.label :grade, "学年" %><br />
        <%= f.select :grade, Lesson.grades.keys, {prompt: '選択してください'}, class: 'form-control btn btn-default' %>
      </div>
      <br>

      <div class="input-group">
        <%= f.label :subject, "教科" %><br />
        <%= f.select :subject, Lesson.subjects.keys, {prompt: '選択してください'}, class: 'form-control btn btn-default' %>
      </div>
      <br>

      <div class="form-group">
        <%= f.label :file, "添付ファイル" %><br />
        <%= f.file_field :file %>
      </div>

      <div class="form-group">
        <%= f.label :title, "タイトル" %><br />
        <%= f.text_field :title, autofocus: true, placeholder: "わかりやすいタイトルを入力してください", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description, "授業について" %><br />
        <%= f.text_area :description, autofocus: true, rows: 10, placeholder: "授業について書いてください　例）授業の展開や資料の使い方など", class: 'form-control' %>
      </div>

      <div class="actions text-center">
        <%= f.submit "授業アイデアを提出する", class: "btn btn-success" %>
      </div>
      <% end %>

      <!-- 戻るボタン -->
      <div><%= link_to "戻る", :back %></div>

    </div>
  </div>
</div>
