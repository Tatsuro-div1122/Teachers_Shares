<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">ログイン</h5>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"}) do |f| %>
              <div class="field-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "teachers@shares.com", class: "form-control" %>
                <%= f.label :email, class: "input" %>
              </div>

              <div class="field-label-group">
                <%= f.password_field :password, autocomplete: "current-password",:placeholder => "パスワードを入力してください", class: "form-control" %>
                <%= f.label :password %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field-label-group">
                  <%= f.check_box :remember_me, class: "custom-control-input" %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
              </div>
            <% end %>


    <%#= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>