<% if counsel_comment.user != current_user %>
  <% if counsel_comment.counsel_comment_liked_by?(current_user) %>
    <%= link_to counsel_comment_likes_path(counsel_comment), method: :delete, class: "btn btn-default" do %>
    <i class="fas fa-lightbulb" aria-hidden="true" style="color: yellow"></i> 参考になった！
    <%= counsel_comment.counsel_comment_likes.count %>
    <% end %>
  <% else %>
    <%= link_to counsel_comment_likes_path(counsel_comment), method: :post, class: "btn btn-default" do%>
    <i class="far fa-lightbulb" aria-hidden="true"></i> 参考になった！
    <%= counsel_comment.counsel_comment_likes.count %>
    <% end %>
  <% end %>
<% end %>