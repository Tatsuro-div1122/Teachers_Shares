<% unless current_user.own_lesson?(lesson)%>
  <% if lesson.lesson_bookmarked_by?(current_user) %>
    <%= link_to lesson_lesson_bookmarks_path(lesson), method: :delete, remote: true do %>
      <i class="fas fa-bookmark" aira hidden="true" style="color: #1e90ff"></i>
    <% end %>
  <% else %>
    <%= link_to lesson_lesson_bookmarks_path(lesson), method: :post, remote: true do %>
      <i class="far fa-bookmark" aira hidden="true" style="color: #1e90ff"></i>
    <% end %>
  <% end %>
<% end %>