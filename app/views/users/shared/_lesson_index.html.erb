<% lessons.each do |lesson| %>
  <div class="media">

    <!-- プロフィール画像 -->
    <% if lesson.user.avatar.attached? %>
      <%= link_to lesson.user, class: "media-left" do %>
        <%= image_tag lesson.user.avatar.variant(resize: "64x64") %>
      <% end %>
    <% else %>
      <%= link_to lesson.user, class: "media-left" do %>
        <%= image_tag "default_user.png", size: "64x64" %>
      <% end %>
    <% end %>
    
    <div class="media-body" >

      <!-- ユーザー情報 -->
      <ul class="list-unstyled list-inline">
        <li><%= lesson.user.last_name %> <%= lesson.user.first_name %></li>
        <li><%= lesson.created_at.to_s(:datetime) %></li>
        <!-- ブックマークボタン -->
        <li id="lesson_bookmark_<%= lesson.id %>"><%= render 'users/shared/lesson_bookmark', lesson: lesson %></li>
        <!-- 編集/削除ボタン -->
        <% if current_user.own_lesson?(lesson) %>
        <li>
          <%= link_to edit_lesson_path(lesson) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </li>
        <li>
          
        </li>
        <% end %>
      </ul>

      <!-- 授業タイトル -->
      <h4 class="media-heading title">
        <%= link_to lesson.title, lesson_path(lesson)%>
      </h4>

      <!-- 授業本文 -->
      <p class="description"><%= lesson.description %></p>

      <!-- 授業情報 -->
      <ul class="list-unstyled list-inline">
        <li><%= lesson.school_type %></li>
        <li><%= lesson.grade %></li>
        <li><%= lesson.subject %></li>
        <!-- いいねボタン -->
        <li id="lesson_like_<%= lesson.id %>"><%= render 'users/shared/lesson_like', lesson: lesson, user: lesson.user %></li>
      </ul>

      <hr>
    </div>
  </div>
<% end %>
