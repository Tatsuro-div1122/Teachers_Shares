<% unless current_user.own_lesson?(lesson)%>
  <% if lesson.lesson_liked_by?(current_user) %>
    <%= link_to lesson_lesson_likes_path(lesson, user_id: user.id), method: :delete, remote: true, class: "btn btn-default btn-sm" do %>
    <i class="fas fa-lightbulb" aria-hidden="true" style="color: yellow"></i> 参考になった！
    <%= lesson.lesson_likes.count %>
    <% end %>
  <% else %>
    <%= link_to lesson_lesson_likes_path(lesson, user_id: user.id), method: :post, remote: true, class: "btn btn-default btn-sm" do%>
    <i class="far fa-lightbulb" aria-hidden="true"></i> 参考になった！
    <%= lesson.lesson_likes.count %>
    <% end %>
  <% end %>
<% end %>
