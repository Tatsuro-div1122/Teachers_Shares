<h5 class="text-center">ログイン中のユーザー</h5>

<div class="text-center">
  <% if user.avatar.attached? %>
    <%= link_to user, class: "img-thumbnail" do %>
      <%= image_tag user.avatar.variant(resize: "100x100") %>
    <% end %>
  <% else %>
    <%= link_to user, class: "img-thumbnail" do %>
      <%= image_tag("default_user.png", size: "100x100") %>
    <% end %>
  <% end %>
</div>
<ul class="profile-list list-unstyled text-center">
  <li>
    <%= link_to user_path(user) do %>
      <p><strong><%= user.last_name %> <%= user.first_name %> 先生</strong></p>
    <% end %>
  </li>
  <li>
      <p><strong><%= user.school_name %></strong></p>
  </li>
  <li>
      <p><strong><%= user.subject %></strong></p>
  </li>
  <li>
      <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-default btn-xs" do %>
        <i class="fa fa-sign-out"></i>  ログアウト
      <% end %>
  </li>
</ul>
<table class="table">
  <tr>
    <td>
      <i class="fas fa-envelope"></i> <%= link_to "メッセージ", user_messages_path(current_user) %>
    </td>
  </tr>
  <tr>
  <tr>
    <td>
      <i class="fas fa-book-open"></i> <%= link_to "ブックマーク", lesson_bookmarks_user_path(user) %>
      <span class="badge pull-right"><%= user.lesson_bookmarks.count %></span>
    </td>
  </tr>
  <tr>
    <td>
  <i class="fas fa-user-friends"></i> <%= link_to "フォロー中", follows_user_path(user) %>
  <span class="badge pull-right" id="user_info_total_follows"><%= user.active_relationships.count %></span>
  </td>
  <tr>
  <tr>
    <td>
      <i class="fas fa-users"></i> <%= link_to "フォロワー", followers_user_path(user) %>
      <span class="badge pull-right"><%= user.passive_relationships.count %></span>
    </td>
  </tr>
  <tr>
    <td>
      <i class="fas fa-lightbulb"></i> 参考になった！
      <span class="badge pull-right"><%= @total_likes %></span>
    </td>
  </tr></table>
<span><%= link_to "授業アイデアを提出する", new_lesson_path, class: "btn btn-warning btn-block" %></span>
<span><%= link_to "悩みを相談する", new_counsel_path, class: "btn btn-primary btn-block" %></span>