<div class="text-center">
  <% if user.avatar.attached? %>
    <%= link_to user, class: "thumbnail" do %>
      <%= image_tag user.avatar.variant(resize: "100x100") %>
    <% end %>
  <% else %>
    <%= link_to user, class: "thumbnail" do %>
      <%= image_tag("default_user.png", size: "100x100") %>
    <% end %>
  <% end %>
</div>
<ul class="profile-list list-unstyled text-center">
  <li>
    <%= link_to user_path(user) do %>
      <p><strong><%= user.last_name + user.first_name %> 先生</strong></p>
    <% end %>
  </li>
  <li>
      <p><strong><%= user.school_name %></strong></p>
  </li>
  <li>
      <p><strong><%= user.subject %></strong></p>
  </li>
</ul>
<table class="table">
  <tr>
    <td>
      <i class="fas fa-book-open"></i> 授業アイデア
      <span class="badge pull-right"><%= link_to user.lessons.count, own_lessons_user_path(user) %></span>
    </td>
  </tr>
  <tr>
    <td>
      <i class="fas fa-lightbulb"></i> 参考になった！
      <span class="badge pull-right"><%= LessonLike.where(user_id: user.id).count + LessonCommentLike.where(user_id: user.id).count + CounselCommentLike.where(user_id: current_user.id).count %></span>
    </td>
  </tr>
  <tr>
    <td>
      <i class="fas fa-user-friends"></i> フォロー中
      <span class="badge pull-right"><%= link_to user.active_relationships.count, follows_user_path(user) %></span>
    </td>
  </tr>
  <tr>
    <td>
      <i class="fas fa-users"></i> フォロワー
      <span class="badge pull-right"><%= link_to user.passive_relationships.count, followers_user_path(user) %></span>
    </td>
  </tr>
</table>
<span><%= link_to "授業アイデアを提出する", new_lesson_path, class: "btn btn-warning btn-block" %></span>
<span><%= link_to "悩みを相談する", new_counsel_path, class: "btn btn-primary btn-block" %></span>