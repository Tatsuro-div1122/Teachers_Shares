<section>
  <div>
    <%= form_with url: category_users_path, method: :get, local: true do |f| %>
      <div class="form-group">
        <%= f.select :school_type, User.school_types.keys, {prompt: '学校種'}, class: 'form-control btn btn-default' %>
      </div>
      
      <div class="form-group">
        <%= f.select :subject, User.subjects.keys, {prompt: '教科'}, class: 'form-control btn btn-default' %>
      </div>

      <div class="form-group">
        <%= f.select :prefecture, User.prefectures.keys, {prompt: '地域'}, class: 'form-control btn btn-default' %>
      </div>

      <div class="actions text-center">
        <%= f.submit "検索", class: "btn btn-info" %>
      </div>
      
    <% end %>
  </div>
</section>