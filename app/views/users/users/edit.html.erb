<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h2>プロフィールの変更</h2>

      <%= form_with model: @user, local: true do |f| %>

        <div class="form-group">
          <%= f.label :"プロフィール写真" %><br />
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "img-responsive img-thumbnail" %>
          <% end %>
          <%= f.file_field :avatar %>
        </div>

        <div class="form-group ">
          <%= f.label :last_name, "姓" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %>
        </div>

        <div class="form-group form-inline">
          <%= f.label :first_name, "名" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :school_type, "学校種" %><br />
          <%= f.radio_button :school_type, :小学校 %>
          <%= f.label :小学校 %>
          <%= f.radio_button :school_type, :中学校  %>
          <%= f.label :中学校 %>
          <%= f.radio_button :school_type, :高校  %>
          <%= f.label :高校 %>
        </div>

        <div class="input-group">
          <%= f.label :prefecture, "所属都道府県" %><br />
          <%= f.select :prefecture, User.prefectures.keys, {}, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :school_name, "所属" %><br />
          <%= f.text_field :school_name, autofocus: true, autocomplete: "school_name", class: 'form-control' %>
        </div>

        <div class="input-group">
          <%= f.label :subject, "教科" %><br />
          <%= f.select :subject, User.subjects.keys, {}, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :year, "教員歴" %><br />
        <div class="input-group">
          <%= f.select :year, options_for_select((1..40).to_a), {}, class: 'form-control' %>
          <span class="input-group-addon">年</span>
        </div>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %><br />
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", placeholder: "自己紹介文を記入してください", rows: "6", class: 'form-control' %>
        </div>

        <div class="actions text-center">
          <span><%= f.submit "変更を保存する", class: "btn btn-success" %></span>
        </div>

      <!-- 戻るボタン -->
      <div><%= link_to "戻る", user_path(@user) %></div>

      <% end %>
    </div>
  </div>
</div>


