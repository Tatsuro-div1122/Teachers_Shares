<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <% if @user == current_user %>
        <span><%= link_to "プロフィールを編集する", edit_user_path(@user), class: "btn btn-default" %></span>
        <span><%= link_to "アカウント設定", edit_user_registration_path, class: "btn btn-danger" %></span>
        <span><%= link_to "ブックマークを見る", lesson_bookmarks_user_path(@user), class: "btn btn-default" %></span>
      <% end %>
      <span><%= link_to "投稿した授業アイデア", own_lessons_user_path(@user), class: "btn btn-default" %></span>
      <span><%= link_to "投稿した悩み相談", own_counsels_user_path(@user), class: "btn btn-default" %></span>
      <% if @user == current_user %>
        <span><%= link_to "メッセージを見る", user_messages_path(@user), class: "btn btn-default" %></span>
      <% else %>
        <span><%= link_to "メッセージを送る", user_messages_path(@user), class: "btn btn-default" %></span>
      <% end %>
      <span><%= link_to "フォロー中の先生を見る", follows_user_path(@user), class: "btn btn-default" %></span>
      <span><%= link_to "フォロワーの先生を見る", followers_user_path(@user), class: "btn btn-default" %></span>
      <span><i class="fas fa-lightbulb" aria-hidden="true" style="color: yellow"></i> 参考になった！<%= @total_likes %></span>
      <% if @user == current_user %>
        <%= render 'users/shared/maybe_friends', users: @users %>
      <% end %>
    </div>
    <div class="col-lg-8">
      <h1>先生プロフィール</h1>
      <div class="profile_image">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize: "400x300") %>
      <% else %>
        <%= image_tag("default_user.png", size: "400x300") %>
      <% end %>
      </div>
      <ul class="profile-items">
        <li>
          <p><%= @user.last_name + @user.first_name %></p>
          <span><%= render 'users/shared/follow', user: @user%></span>
        </li>
        <li>
          <p>学校種</p>
          <p><%= @user.school_type %></p>
        </li>
        <li>
          <p>所属所在地</p>
          <p><%= @user.prefecture %></p>
        </li>
        <li>
          <p>所属</p>
          <p><%= @user.school_name %></p>
        </li>
        <li>
          <p>教科</p>
          <p><%= @user.subject %></p>
        </li>
        <li>
          <p>教員歴</p>
          <p><%= @user.year %>年</p>
        </li>
        <li>
          <p>自己紹介</p>
          <p><%= @user.introduction %></p>
        </li>
      </ul>
    </div>
  </div>
</div>
